@page "/kanbanboard"
<Heading Size="HeadingSize.Is1">Welcome To your Current Board</Heading>

<Paragraph>Number of Tasks: @currentTasks</Paragraph>

<DropContainer TItem="TodoItem" Items="@items" ItemsFilter="@((item, dropZone) => item.Group == dropZone)" ItemDropped="@ItemDropped" Flex="Flex.Wrap.Grow.Is1">
    <ChildContent>

    </ChildContent>
</DropContainer>
@code {
    int currentTasks;

    public class TodoItem
    {
        public string Group { get; set; }
    }

    List<TodoItem> items;

    private void ItemDropped( DraggableDroppedEventArgs<TodoItem> dropItem )
    {
        dropItem.Item.Group = dropItem.DropZoneName;
    }
}